# .htaccess for midastechnical.com Production Environment
# WordPress + WooCommerce + Security + Performance Optimizations

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
RewriteBase /
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>
# END WordPress

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.stripe.com *.google-analytics.com *.googletagmanager.com; style-src 'self' 'unsafe-inline' fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data: *.stripe.com *.google-analytics.com; connect-src 'self' *.stripe.com *.google-analytics.com; frame-src 'self' *.stripe.com"
</IfModule>

# Force HTTPS
<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# WWW to non-WWW redirect
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_HOST} ^www\.midastechnical\.com [NC]
    RewriteRule ^(.*)$ https://midastechnical.com/$1 [L,R=301]
</IfModule>

# SEO Redirects from Next.js to WordPress
<IfModule mod_rewrite.c>
    # Product redirects
    RewriteRule ^products/(.+)$ /product/$1/ [R=301,L]
    
    # Category redirects
    RewriteRule ^categories/phone-parts$ /product-category/phone-parts/ [R=301,L]
    RewriteRule ^categories/iphone-parts$ /product-category/iphone-parts/ [R=301,L]
    RewriteRule ^categories/repair-tools$ /product-category/repair-tools/ [R=301,L]
    
    # Account redirects
    RewriteRule ^account$ /my-account/ [R=301,L]
    RewriteRule ^admin$ /wp-admin/ [R=301,L]
    
    # API redirects
    RewriteRule ^api/(.+)$ /wp-json/mdts/v1/$1 [R=301,L]
</IfModule>

# File Security
<Files wp-config.php>
    Order allow,deny
    Deny from all
</Files>

<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

<Files readme.html>
    Order allow,deny
    Deny from all
</Files>

<Files license.txt>
    Order allow,deny
    Deny from all
</Files>

<Files install.php>
    Order allow,deny
    Deny from all
</Files>

<Files wp-config-sample.php>
    Order allow,deny
    Deny from all
</Files>

# Disable directory browsing
Options -Indexes

# Disable access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Disable access to wp-content/uploads PHP files
<Directory "wp-content/uploads">
    <FilesMatch "\.php$">
        Order allow,deny
        Deny from all
    </FilesMatch>
</Directory>

# Performance Optimizations
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Gzip Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE text/javascript
</IfModule>

# Cache Control
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|webp|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
</IfModule>

# Disable XML-RPC
<Files xmlrpc.php>
    Order allow,deny
    Deny from all
</Files>

# Block malicious requests
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} proc/self/environ [OR]
    RewriteCond %{QUERY_STRING} mosConfig_[a-zA-Z_]{1,21}(=|\%3D) [OR]
    RewriteCond %{QUERY_STRING} base64_(en|de)code\(.*\) [OR]
    RewriteCond %{QUERY_STRING} (\<|%3C).*iframe.*(\>|%3E) [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# Limit file upload size
LimitRequestBody 67108864

# WooCommerce specific optimizations
<IfModule mod_rewrite.c>
    # Optimize WooCommerce checkout
    RewriteCond %{REQUEST_URI} ^/checkout/
    RewriteRule ^(.*)$ - [E=no-gzip:1]
</IfModule>

# Stripe webhook optimization
<IfModule mod_rewrite.c>
    RewriteRule ^wc-api/stripe_webhook$ /wp-json/mdts/v1/stripe-webhook [R=301,L]
</IfModule>
